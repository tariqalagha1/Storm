{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "react": ["node_modules/@types/react"],
      "react-dom": ["node_modules/@types/react-dom"],
      "react-router-dom": ["node_modules/@types/react-router-dom"],
      "react-query": ["node_modules/@types/react-query"],
      "react-hot-toast": ["node_modules/@types/react-hot-toast"],
      "@heroicons/react/24/outline": ["node_modules/@heroicons/react/24/outline"],
      "recharts": ["node_modules/@types/recharts"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}